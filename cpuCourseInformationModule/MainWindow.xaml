            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <Image Grid.Column="1" Grid.Row="1" Source="C:\Users\User\Documents\cpuCourseInformationModule\cpuCourseInformationModule\Images\kisspng-central-philippine-university-college-of-enginee-philippine-red-cross-logo-5b5e30cd385468.4612908715328995332307.png" Width="100" Height="100" Grid.RowSpan="5" Margin="4, 0, 4, 20"></Image>
