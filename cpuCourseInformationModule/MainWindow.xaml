        <TextBlock Grid.Column="2" Grid.Row="3" FontSize="16" Foreground="#FFE0E0E0" Text="Password:" Margin="4, 0, 0, 10" FontFamily="Arial"/>
        <TextBox Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2" Margin="-25, 0, 0, 10"></TextBox>
        <TextBox Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2" Margin="-25, 0, 0, 10"></TextBox>
        <Button Grid.Column="3" Grid.Row="4" Content="Submit" Click="Button_Click_1"></Button>
        
    </Grid>
